desktop-grid-narrow()
  max-width 800px

desktop-grid-dual()
  > .grid:nth-child(1)
    width 33%

  > .grid:nth-child(2)
    width 66%

desktop-grid-dual-reversed()
  > .grid:nth-child(1)
    width 66%

  > .grid:nth-child(2)
    width 33%

+desktop()
  .desktop-grid
    display flex
    flex-wrap wrap
    margin auto
    max-width 1024px

    &.-padless
      > .grid
        padding 0
      > .grid ~ .grid
        padding-left 1em

    > .grid
      box-sizing border-box
      width 100%

    &.-dual
      desktop-grid-dual()

      > .grid ~ .grid
        padding-left 1em

    &.-reversed
      desktop-grid-dual-reversed()

    &.-narrow
      desktop-grid-narrow()
