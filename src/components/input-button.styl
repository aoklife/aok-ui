/*
InputButton with icons

Your standard button suitable for clicking.

.-block - full width
.-disabled - disabled
.-inverted - inverted
:hover - Highlights when hovering.

Markup:
<button class="input-button {{modifier_class}}">
  <span class="text">Button</span>
  <i class="ion-icon ion-ios-checkmark"></i>
</button>

Style guide: components.input-button.1
*/

@import '../colors'
@import '../mixins/typography'

button-size($fontsize, $height)
  font-size $fontsize
  height $height
  line-height $height

button()
  align-items center
  background $white
  border 1px solid $black
  border-radius 0
  box-sizing border-box
  color $black
  crisp-text()
  display inline-flex
  font-body()
  justify-content center
  outline 0
  padding 0 2em
  text-align center
  text-decoration none
  transition 250ms
  user-select none
  width auto

  button-size(16px, 36px)

  &.-block
    width 100%

  &.-disabled
    border-color $gray
    opacity 0.5

  &.-simple
    border-color transparent

  &:hover:not(.-disabled)
    background $black
    color $white

  &.-big
    border-width 2px
    button-size(24px, 48px)

  &.-small
    button-size(14px, 32px)
    padding 0 1.25em

  &.-inverted
    background $black
    color $white

  &.-success
    > .ion-icon
      color $green

  > .ion-icon
    font-size 1.25em

    &:first-child
      margin-right 0.5em

    &:last-child
      margin-left 0.25em

  &.-outlined
    background transparent
    border-color $white
    color $white

.input-button
  button()
