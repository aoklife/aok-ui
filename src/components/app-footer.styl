@import "../colors"
@import "../mixins/typography"

.app-footer
  background $black
  color $gray
  min-height 400px
  font-body()

  > .app-container
    display flex
    justify-content space-between
    padding 2em 0

  .links
    align-items center
    display inline-flex
    margin 0
    padding 0

    > li
      $size = 24px
      align-items center
      display inline-flex
      height $size
      margin 0
      padding 0 1em

      .ion-icon
        font-size 24px

  .links a
    color $white
