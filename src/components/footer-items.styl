@import '../colors'
@import '../mixins/typography'

.footer-items
  $font-size = 14px
  color $gray
  crisp-text()
  display flex
  font-body($font-size)
  justify-content space-between
  margin 1em 0
  padding 0

  > .item
    display inline
    margin 0
    padding 0

    > .title
      font-bold(12px)
      text-transform uppercase

    > .value
      color $black

  > .item > .ion-icon:first-child
    margin-right 5px
