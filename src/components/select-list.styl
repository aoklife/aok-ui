@import '../colors'
@import '../mixins/typography'
@import './input-text'

$option-height = 36px
$select-list-max-height = 240px

.select-list
  crisp-text()
  position relative

  &.-focused > .input-text:after
    content '\f3d2'

  > .input-text
    position relative

    &:after
      align-items center
      bottom 0
      color $gray
      content '\f3d0'
      display flex
      font-family 'Ionicons'
      height $input-height
      position absolute
      right 0

  > .remove-btn
    align-items center
    bottom 0
    cursor pointer
    display flex
    height $input-height
    justify-content flex-end
    left 0
    opacity 0
    position absolute
    right 0
    z-index 3

    &:hover
      opacity 1

    &:hover ~ .input-text:after
      opacity 0

  &.-empty
    > .option-list > .option
      color $gray
      justify-content center

  > .option-list
    left 0
    max-height $select-list-max-height
    overflow auto
    position absolute
    right 0
    top 100%
    z-index 9

.option-list
  background $white
  border 1px solid $lightgray
  font-body()

  > .option
    align-items center
    display flex
    height $option-height
    padding 0 0.75em

    &:hover
      background $black
      color $white
      cursor pointer

    ~ .option
      border-top 1px solid $lightgray
