@import '../colors'
@import '../vars'
@import '../mixins/typography'

.link-text
  cursor pointer
  display inline-block

  > .text
    background none
    border 0
    color $gray
    font-body()
    outline 0
    padding 0

  &.-black
    > .link-button
      color $black

  &.-centered
    display block
    text-align center

  &.-padded
    padding-top 1em

  &.-button
    padding 1em 2em

  &.-strong
    > .link-button
      font-weight $medium-font-weight

  &.-white
    > .link-button
      color $white
