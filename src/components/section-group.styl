@import '../colors'

.section-group
  &.-inline
    align-items center
    display flex
    padding 0.5em 0

    ~ .section-group
      border-top 1px solid $lightgray

    > .section-title
      align-items center
      display flex
      flex-grow 1

    > .section-body
      text-align right
      width 25%

