/*
AppModal

Display an overlaying modal

```
<div class="app-modal">
  <div class="inner">Content here</div>
  <div class="hotspot"></div>
</div>
```

Style guide: components.app-modal
*/
@import '../colors'
@import '../mixins/media'
@import '../mixins/typography'

.app-modal
  align-items center
  bottom 0
  crisp-text()
  display flex
  font-body(16px)
  justify-content center
  left 0
  position fixed
  right 0
  top 0
  z-index 9999

  &.-full > .inner
    align-items center
    display flex
    height 100%
    justify-content center
    width 100%

  &.-centered > .inner
      text-align center

  &.-translucent > .hotspot
    background rgba($white, 0.8)

  > .inner
    box-sizing border-box
    position relative
    z-index 3

    +desktop()
      min-width $desktop-width

    +mobile()
      padding 0 1em
      width 100%

  > .hotspot
    background $white
    bottom 0
    left 0
    pointer-events none
    position absolute
    right 0
    top 0
    user-select none
    z-index 1

    > .img
      height 100%
      left 50%
      margin-left -50%
      position absolute
      top 0


