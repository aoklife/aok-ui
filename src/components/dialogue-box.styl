@import '../colors'

.dialogue-box
  background $white
  border 2px solid $black
  box-sizing border-box
  margin auto
  max-width 600px
  padding 1.5em 2em
  position relative
  text-align left

  > .section-title
    color inherit

  &.-error
    border-color $red
    color $red

  +desktop()
    width 500px

  > .remove-btn
    cursor pointer
    font-size 24px
    margin 1em
    position absolute
    right 0
    top 0
