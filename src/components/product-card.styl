@import '../colors'
@import '../mixins/media'
@import '../mixins/typography'

.product-card
  background $white
  padding 1.25em
  width 100%

  &:hover
    background-color lightness($lightgray, 95%)

  +desktop()
    align-items stretch
    display flex

  > .photo
    $photo-size = 180px
    flex-shrink 0
    overflow hidden
    width $photo-size

    > .img
      width $photo-size

    +mobile()
      width 100%

  ~ .product-card
    border-top 1px solid $lightgray

  > .product-info
    flex-grow 1

    +mobile()
      margin 1em 0

    +desktop()
      margin-left 1.5em

  > .product-actions
    +desktop()
      flex-shrink 0
      text-align right
      min-width 240px

    > .section-title ~ .action-list
      margin-top 1em
