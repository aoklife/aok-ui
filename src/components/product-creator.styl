@import '../colors'
@import '../mixins/media'

thumbnail()
  position relative

  ~ .thumbnail
    margin-left 5px

  > .remove-btn
    height 16px
    line-height  16px
    margin 5px
    position absolute
    right 0
    text-align center
    top 0
    width 16px

    &:hover
      background $black
      color $white

thumbnails()
  display flex
  margin-bottom 10px
  width 100%

  > .thumbnail
    thumbnail()

image-container()
  align-items center
  display flex
  flex-wrap wrap
  justify-content center
  position relative
  width 55%

  > .primary
    align-items center
    background $lightgray
    display flex
    flex-grow 1
    height 400px
    justify-content center
    margin-bottom 5px
    width 100%

  > .primary > .remove-btn
    margin 1em
    position absolute
    right 0
    top 0
    z-index 2

  > .thumbnails
    thumbnails()

.product-creator
  display flex
  flex-wrap wrap

  +mobile()
    flex-direction column

  > .images
    image-container()

  > .fields
    flex-grow 1
    margin-left 2em

  > .bottom
    width 100%
